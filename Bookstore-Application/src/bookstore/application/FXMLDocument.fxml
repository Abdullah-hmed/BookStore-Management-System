<BorderPane fx:id="borderPane" styleClass="white-background" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookstore.application.FXMLDocumentController">
   <left>
      <VBox prefHeight="810.0" prefWidth="261.0" style="-fx-background-color: faf3f1;" BorderPane.alignment="CENTER">
         <children>
            <VBox />
            <Label prefHeight="28.0" prefWidth="94.0" text="Genre">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Separator prefWidth="200.0" />
            <JFXButton fx:id="ArtButton" alignment="BOTTOM_LEFT" focusTraversable="false" onAction="#ArtPage" prefHeight="48.0" prefWidth="261.0" text="Art">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin></JFXButton>
            <JFXButton fx:id="BiographyButton" alignment="BOTTOM_LEFT" focusTraversable="false" layoutX="10.0" layoutY="55.0" onAction="#BiographyPage" prefHeight="48.0" prefWidth="261.0" text="Biography">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </JFXButton>
            <JFXButton fx:id="ScifiButton" alignment="BOTTOM_LEFT" focusTraversable="false" layoutX="10.0" layoutY="55.0" onAction="#ScifiPage" prefHeight="48.0" prefWidth="261.0" text="Science Fiction">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </JFXButton>
            <JFXButton fx:id="FantasyButton" alignment="BOTTOM_LEFT" focusTraversable="false" layoutX="10.0" layoutY="103.0" onAction="#FantasyPage" prefHeight="48.0" prefWidth="261.0" text="Fantasy">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </JFXButton>
            <JFXButton fx:id="NonfictionButton" alignment="BOTTOM_LEFT" focusTraversable="false" layoutX="10.0" layoutY="247.0" onAction="#NonFictionPage" prefHeight="48.0" prefWidth="261.0" text="Non-fiction">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </JFXButton>
            <JFXButton fx:id="HistoryButton" alignment="BOTTOM_LEFT" focusTraversable="false" layoutX="10.0" layoutY="493.0" onAction="#HistoryPage" prefHeight="48.0" prefWidth="261.0" text="History">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </JFXButton>
            <JFXButton fx:id="ThrillerButton" alignment="BOTTOM_LEFT" focusTraversable="false" layoutX="10.0" layoutY="541.0" onAction="#ThrillerPage" prefHeight="48.0" prefWidth="261.0" text="Thriller">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </JFXButton>
            <JFXButton fx:id="RomanceButton" alignment="BOTTOM_LEFT" focusTraversable="false" layoutX="10.0" layoutY="439.0" onAction="#RomancePage" prefHeight="48.0" prefWidth="261.0" text="Romance">
               <font>
                  <Font size="18.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="ComicsButton" alignment="BOTTOM_LEFT" focusTraversable="false" layoutX="10.0" layoutY="295.0" onAction="#ComicsPage" prefHeight="48.0" prefWidth="261.0" text="Comics">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </JFXButton>
            <JFXButton fx:id="ChildrenBooksButton" alignment="BOTTOM_LEFT" focusTraversable="false" layoutX="10.0" layoutY="391.0" onAction="#ChildrensBooksPage" prefHeight="48.0" prefWidth="261.0" text="Children's Books">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </JFXButton>
         </children>
      </VBox>
   </left>
   <top>
      <JFXToolbar BorderPane.alignment="CENTER">
         <left>
            <JFXButton focusTraversable="false" onAction="#HomeButton" prefHeight="66.0" prefWidth="214.0" text="Book Store" BorderPane.alignment="CENTER">
               <graphic>
                  <ImageView fitHeight="52.0" fitWidth="56.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Fox_River_Paper_logo.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="24.0" />
               </font>
            </JFXButton>
         </left>
         <center>
            <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="50.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="searchBar" focusTraversable="false" prefHeight="32.0" prefWidth="427.0" promptText="Search">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <JFXButton ellipsisString="" focusTraversable="false" onAction="#searchButton" prefHeight="35.0" prefWidth="30.0" stylesheets="@styles.css">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@search.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
               </children>
               <padding>
                  <Insets bottom="6.0" left="26.0" right="6.0" top="6.0" />
               </padding>
            </HBox>
         </center>
         <right>
            <JFXButton fx:id="UserButton" focusTraversable="false" prefHeight="46.0" BorderPane.alignment="CENTER">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@user.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font size="16.0" />
               </font>
               <contextMenu>
                  <ContextMenu fx:id="contextMenu">
                     <items>
                        <MenuItem fx:id="signIn" mnemonicParsing="false" onAction="#loginUser" text="Sign In" />
                        <MenuItem fx:id="viewCart" mnemonicParsing="false" onAction="#viewCart" text="View Cart" visible="false" />
                        <MenuItem fx:id="logout" mnemonicParsing="false" onAction="#logoutAccount" text="Log out" visible="false" />
                     </items>
                  </ContextMenu>
               </contextMenu>
            </JFXButton>
         </right>
      </JFXToolbar>
   </top>
</BorderPane>
