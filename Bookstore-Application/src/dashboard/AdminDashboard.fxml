<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dashboard.AdminDashboardLoader">
    <stylesheets>
        <URL value="@styles2.css" />
    </stylesheets>

    <children>
        <!-- Top VBox -->
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Label styleClass="header-label" text="Admin Dashboard" />
        </VBox>

        <!-- Left VBox -->
        <VBox spacing="10" AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="0.0">
            <Label styleClass="section-label" text="Recent Sales" />
            <ListView fx:id="recentSalesListView" />
        </VBox>

        <!-- Center VBox -->
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0">
            <Label styleClass="section-label" text="Inventory" />
            <TableView fx:id="inventoryTableView">
                <columns>
                    <TableColumn prefWidth="100" text="ISBN" />
                    <TableColumn prefWidth="250" text="Title" />
                    <TableColumn prefWidth="150" text="Author" />
                    <TableColumn prefWidth="100" text="Quantity" />
                    <TableColumn prefWidth="100" text="Price" />
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>


