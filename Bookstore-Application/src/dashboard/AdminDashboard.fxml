<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="599.0" prefWidth="830.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dashboard.AdminDashboardController">
    <stylesheets>
        <URL value="@styles2.css" />
    </stylesheets>
   <top>
      <JFXToolbar BorderPane.alignment="CENTER">
         <right>
            <JFXButton alignment="CENTER_RIGHT" text="Logout" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Consolas Bold" size="18.0" />
               </font>
            </JFXButton>
         </right>
         <left>
            <Label text="Admin Dashboard" BorderPane.alignment="CENTER">
               <padding>
                  <Insets left="10.0" />
               </padding>
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </left>
      </JFXToolbar>
   </top>
   <left>
      <VBox alignment="TOP_CENTER" style="-fx-background-color: lightgrey;" BorderPane.alignment="CENTER">
         <children>
            <JFXButton text="Inventory" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </JFXButton>
            <JFXButton text="Trends" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </JFXButton>
            <JFXButton text="Sales" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </JFXButton>
         </children>
      </VBox>
   </left>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="289.0" prefWidth="731.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#chooseBookImage" prefHeight="29.0" prefWidth="109.0" text="Choose Cover">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <TextField promptText="Book Name">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField promptText="Author Name">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField promptText="Genre">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField prefHeight="29.0" prefWidth="96.0" promptText="Price">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <Button mnemonicParsing="false" text="Add Book">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Button>
            <TableView fx:id="bookTable" prefHeight="566.0" prefWidth="731.0">
              <columns>
                <TableColumn fx:id="bookColumn" minWidth="-1.0" prefWidth="231.0" text="Book" />
                <TableColumn fx:id="authorColumn" minWidth="-1.0" prefWidth="231.0" text="Author" />
                  <TableColumn fx:id="genreColumn" minWidth="-1.0" prefWidth="176.0" text="Genre" />
                  <TableColumn fx:id="priceColumn" minWidth="-1.0" prefWidth="92.0" text="Price" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
